[Unit]
Description=WhisperWatch Transcription Service
After=network.target

[Service]
Type=simple
User=root
Group=root
WorkingDirectory=/opt/whisperwatch
ExecStart=/usr/bin/python3 /opt/whisperwatch/main.py
Restart=always
RestartSec=5
StandardOutput=journal
StandardError=journal
Environment="PYTHONUNBUFFERED=1"

[Install]
WantedBy=multi-user.target
